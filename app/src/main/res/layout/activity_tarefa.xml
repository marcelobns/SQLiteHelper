<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.anotherwise.sqlitehelper.TarefaActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tituloEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:hint="Título"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descricaoEdit"
        android:layout_marginTop="46dp"
        android:hint="Descrição"
        android:textSize="20sp"
        android:layout_below="@+id/tituloEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Concluir"
        android:id="@+id/concluirSwitch"
        android:layout_marginTop="54dp"
        android:checked="false"
        android:textSize="20sp"
        android:layout_below="@+id/descricaoEdit"
        android:layout_centerHorizontal="true"
        android:textColor="#ff777777"
        android:padding="5dp" />

</RelativeLayout>
